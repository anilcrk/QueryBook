@model QueryBook.WebUI.Models.Home.HomeViewModel
@using (Html.BeginForm("AddUpQuery", "", FormMethod.Post))
{@Html.AntiForgeryToken()
    <div class="row">
        @Html.HiddenFor(m=>m.query.Id)
        <div class="col-xs-6">
            @Html.LabelFor(m => m.query.Name)
            @Html.TextBoxFor(m => m.query.Name, new { @class = "form-control form-control-sm " })
        </div>
        <div class="col-xs-6">
            @Html.LabelFor(m => m.query.OrderNo)
            @Html.EditorFor(m => m.query.OrderNo, new { htmlAttributes = new { @class = "form-control form-control-sm " } })
        </div>
        <div class="col-xs-6">
            @Html.LabelFor(m => m.query.Explanation)
            @Html.TextBoxFor(m => m.query.Explanation, new { @class = "form-control form-control-sm " })
        </div>
        <div class="col-xs-12">
            @Html.LabelFor(m => m.query.QueryScript)<br />
            @Html.TextAreaFor(m => m.query.QueryScript, new { htmlAttributes = new { @class = "" } })
        </div>
        <button type="submit">Kaydet</button>
    </div>
}